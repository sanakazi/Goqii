<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:id="@+id/gymDetailsLayout"
    android:background="#11000000"
    android:layout_gravity="bottom">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="3dp"
    android:elevation="5dp"    >
    <LinearLayout
        android:background="@color/MilkWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.android.volley.toolbox.NetworkImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:adjustViewBounds="true"
            android:id="@+id/gymLogoImgView"
            />

        <LinearLayout
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="5dp"
                android:id="@+id/gymNameTxtView"
                android:gravity="center_vertical"
                android:textColor="@color/Black"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/GrayGoose"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:id="@+id/activityNameTxtView"
                android:textColor="@color/Gray"/>
            <TextView
                android:layout_width="match_parent"
                android:padding="2dp"
                android:textColor="@color/NavyBlue"
                android:layout_height="wrap_content"
                android:id="@+id/timeSlotView"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
</LinearLayout>