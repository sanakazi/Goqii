<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tweetLayout">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/twitterDpImageview"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"

            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tweet_text_layout"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/twitterDpImageview"
            android:layout_alignTop="@id/twitterDpImageview"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tweetTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                />
            <TextView
                android:id="@+id/tweetTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                />

        </LinearLayout>
        <ImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/twitter_logo"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:layout_alignTop="@id/twitterDpImageview"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tweet_text_layout"
            android:layout_alignLeft="@id/tweet_text_layout"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:linksClickable="true"
            android:autoLink="web"
            android:id="@+id/twitterDetailText"
            />
        <com.android.volley.toolbox.NetworkImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/twitterDetailText"
            android:layout_alignLeft="@id/twitterDetailText"
            android:adjustViewBounds="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/twitterImageview"
            android:visibility="gone"
            />
    </RelativeLayout>
