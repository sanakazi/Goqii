<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/cancle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cancel_book"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="7dp"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="5dp" >

            <com.ftgoqiiact.viewmodel.custom.RoundedImageView
                android:id="@+id/image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="7dp"
                android:scaleType="centerCrop"
                app:oval="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:visibility="gone" >

                <View
                    android:id="@+id/vlevel1"
                    android:layout_width="20dp"
                    android:layout_height="5px"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@color/Aquamarine" />

                <View
                    android:id="@+id/vlevel2"
                    android:layout_width="20dp"
                    android:layout_height="5px"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@color/BabyBlue" />

                <View
                    android:id="@+id/vlevel3"
                    android:layout_width="20dp"
                    android:layout_height="5px"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@color/BasketBallOrange" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <com.ftgoqiiact.viewmodel.custom.CustomTextView
                    android:id="@+id/activity_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="Activity Name"
                    android:textAllCaps="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/title"
                    android:textStyle="bold" />
            </LinearLayout>

            <com.ftgoqiiact.viewmodel.custom.CustomTextView
                android:id="@+id/gymname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="Gym Name"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <com.ftgoqiiact.viewmodel.custom.CustomTextView
                android:id="@+id/baranchName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="BranchName"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <com.ftgoqiiact.viewmodel.custom.CustomTextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="8:00pm to 9:00pm"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <com.ftgoqiiact.viewmodel.custom.CustomTextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="2015-08-11"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <com.ftgoqiiact.viewmodel.custom.CustomTextViewBold
                android:id="@+id/unique_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="7dp"
                android:paddingLeft="7dp"
                android:singleLine="true"
                android:text=""
                android:visibility="gone"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.ftgoqiiact.viewmodel.custom.CustomTextView
                    android:id="@+id/statusLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:text="Status: "
                    android:visibility="gone"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
                <com.ftgoqiiact.viewmodel.custom.CustomTextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:visibility="gone"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>