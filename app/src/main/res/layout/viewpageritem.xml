<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/yoga" />

    <View
        android:id="@+id/ivPagerImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/TransBlack3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSkip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/buynow"
            android:text="GOT IT!"
            android:textColor="@color/White"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_launcher" />

    <com.ftgoqiiact.viewmodel.custom.CustomTextViewBold
        android:id="@+id/tvPagerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        android:text="FIND AWESOME ACTIVITIES NEARBY"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/White"
        android:textSize="25dp" />

    <com.ftgoqiiact.viewmodel.custom.CustomTextView
        android:id="@+id/tvLowerPagerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPagerText"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="FIND AWESOME ACTIVITIES NEARBY"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/White" />

</RelativeLayout>